@model NERCManagementSystem.Models.Member

@{
    ViewBag.Title = "Delete";
}
<div>
    <h2>Members</h2>
    <h4>Delete Member</h4>
    <p>Are you sure you want to delete the following member?</p>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            Team
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Team.Name)
        </dd>
        <dt>
            Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MemberType.Name)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <p class="text-center"><input type="submit" value="Delete" class="btn btn-danger" />          @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })</p>
    }
</div>
