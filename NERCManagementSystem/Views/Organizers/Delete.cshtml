@model NERCManagementSystem.Models.Organizer

@{
    ViewBag.Title = "Delete";
}

<h2>Organizers</h2>
<h4>Delete Organizer</h4>

<p>Are you sure you want to delete all information regarding the following organizer?</p>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            Username
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.UserName)
        </dd>

        <dt>
            Task
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrganizerTask.Name)
        </dd>

        <dt>
            Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrganizerType.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <p class="text-center"><input type="submit" value="Delete" class="btn btn-danger" />          @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })</p>
    }
</div>
